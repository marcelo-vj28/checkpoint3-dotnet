@model CP3.MVC.Application.Dtos.BarcoDto

<h1>Excluir Barco</h1>

<h3>Tem certeza que deseja excluir este barco?</h3>

<div>
    <h4>Detalhes do Barco</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Nome</dd>

        <dt class="col-sm-2">Modelo</dt>
        <dd class="col-sm-10">@Model.Modelo</dd>

        <dt class="col-sm-2">Ano</dt>
        <dd class="col-sm-10">@Model.Ano</dd>

        <dt class="col-sm-2">Tamanho</dt>
        <dd class="col-sm-10">@Model.Tamanho</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>